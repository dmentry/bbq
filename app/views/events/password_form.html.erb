<h1><%= t('views.pincode_access') %></h1>

<!-- Урла здесь нет, значит содержимое формы методом Post отправится на тот же урл, где она отобразилась -->
<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group">
    <%= label 'Пин-код', :pincode %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
  </div>

  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>

<%= link_to 'На главную', events_path %>