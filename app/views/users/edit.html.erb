<h1>Редактирование профиля</h1>

<div class="row">
  <div class="col-md-6" buffer-top>
    <%= render 'form' %>

    <p class="buffer-top">
      <%= link_to t('views.change_psw'), edit_user_registration_path, class: 'btn btn-primary' %>
    </p>

    <p class="buffer-top">
      <%= link_to t('views.delete_profile'), @user, method: :delete, data: { confirm: t('views.are_you_sure?') }, class: 'btn btn-danger' %>
    </p>
  </div>
</div>
